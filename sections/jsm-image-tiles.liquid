{{ 'jsm-image-tiles.css' | asset_url | stylesheet_tag }}
<div class="jsm-image-tiles">
	<div class="title">
		{{ section.setting.title }}
	</div>
	
	<div class="jsm-image-tiles-inner" style="padding-top: {{ section.settings.padding_top }}px;padding-bottom: {{ section.settings.padding_bottom }}px;">
		{% for block in section.blocks %}
			<div class="tile">
				<a href="{{ block.settings.image_link }}" title="{{ block.settings.image_link.title }}">
					<img srcset="{{ block.settings.tile_image | img_url: 'master' }}"
						 src="{{ block.settings.tile_image | img_url: 'master' }}"
						 alt="{{ block.settings.tile_image.alt | escape }}"
						 title="{{ block.settings.tile_image.alt | escape }}"
						 class="lazyload Image--lazyLoad"
					>
				</a>
			</div>
		{% endfor %}
	</div>
</div>

{% schema %}
{
  "name": "JSM Image Tiles",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_middle",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Center white Space",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "tile",
      "name": "Tile Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "tile_image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "image_link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "JSM Image Tiles",
      "category": "Image",
      "blocks": [
        {
          "type": "tile"
        }
      ]
    }
  ]
}
{% endschema %}